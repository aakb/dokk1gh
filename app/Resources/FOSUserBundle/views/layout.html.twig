{% extends '@EasyAdmin/default/layout.html.twig' %}

{% trans_default_domain 'FOSUserBundle' %}

{% block head_stylesheets %}
  {{ parent() }}

  {% if true or not app.user %}
    <style>
     {# Hide the sidebar #}
     .main-sidebar {
       display: none;
     }

     .content-wrapper {
       margin-left: 0 !important;
       padding-top: 0;
     }
    </style>
  {% endif %}
{% endblock %}

{% block page_title 'Gæstehåndtering-login' | trans %}
{% block sidebar '' %}
{% block body_id 'sign-in' %}
{% block header_custom_menu null %}

{% block main %}
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="panel">
        {% if block('page_title') %}
          <div class="panel-heading">
            <h1>{{ block('page_title') }}</h1>
          </div>
        {% endif %}

        <div class="panel-body">
          {% block fos_user_content %}{% endblock %}
        </div>
      </div>
    </div>
  </div>
{% endblock %}
